{
	"name": "svelte-tiptap-editor",
	"version": "1.0.4",
	"author": "merhmerh",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"sass": "^1.92.1",
		"svelte": "^5.0.0"
	},
	"dependencies": {
		"@iconify/svelte": "^5.0.1",
		"@tiptap/core": "^3.4.2",
		"@tiptap/extension-code-block-lowlight": "^3.4.2",
		"@tiptap/extension-file-handler": "^3.4.2",
		"@tiptap/extension-image": "^3.4.2",
		"@tiptap/extension-link": "^3.4.2",
		"@tiptap/extension-ordered-list": "^3.4.2",
		"@tiptap/extension-placeholder": "^3.4.2",
		"@tiptap/extension-subscript": "^3.4.2",
		"@tiptap/extension-superscript": "^3.4.2",
		"@tiptap/extension-table": "^3.4.2",
		"@tiptap/extension-text-align": "^3.4.2",
		"@tiptap/extension-underline": "^3.4.2",
		"@tiptap/extension-unique-id": "^3.4.4",
		"@tiptap/extensions": "^3.4.2",
		"@tiptap/pm": "^3.4.2",
		"@tiptap/starter-kit": "^3.4.2",
		"lowlight": "^3.3.0",
		"tippy.js": "^6.3.7"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.38.1",
		"@sveltejs/package": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"publint": "^0.3.12",
		"svelte": "^5.38.10",
		"svelte-check": "^4.3.1",
		"typescript": "^5.9.2",
		"vite": "^7.1.5"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
